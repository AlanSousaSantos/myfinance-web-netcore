@model PlanoContaModel
@{
    ViewData["Title"] = "Cadastro de Plano de Contas";
}

<div class="container my-5">
    <div class="card shadow-lg border-success">
        <div class="card-header bg-success text-white">
            <h3 class="m-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-controller="PlanoConta" asp-action="Cadastro" method="post">
                <div class="mb-4">
                    <label for="txtNome" class="form-label fw-bold text-success">Descrição</label>
                    <input type="hidden" id="txtId" class="form-control" asp-for="Id" />
                    <input type="text" id="txtNome" class="form-control border-success" asp-for="Nome" placeholder="Digite a descrição" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-success">Tipo</label>
                    <div class="form-check">
                        <input class="form-check-input border-success" type="radio" asp-for="Tipo" value="D" id="tipoDespesa" />
                        <label class="form-check-label text-success" for="tipoDespesa">Despesa</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input border-success" type="radio" asp-for="Tipo" value="R" id="tipoReceita" />
                        <label class="form-check-label text-success" for="tipoReceita">Receita</label>
                    </div>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success btn-lg me-2">Salvar</button>
                    <button type="button" class="btn btn-outline-success btn-lg" onclick="Voltar()">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function Voltar() {
        window.location.href = "../PlanoConta/Index";
    }
</script>

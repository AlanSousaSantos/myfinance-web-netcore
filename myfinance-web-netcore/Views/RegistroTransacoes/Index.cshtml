@using myfinance_web_netcore.Domain
@{
    ViewData["Title"] = "Registro de Transações";
}

<h1>Registro de Transações</h1>
<br />
<a type='button' class='btn btn-primary' asp-area='' asp-controller="RegistroTransacoes" asp-action="Cadastro"> Criar item de Transação </a>
<br /> <br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Data</th>
        <th>Valor</th>
        <th>Histórico</th>
        <th>Tipo</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @foreach (var item in (List<Transacao>)ViewBag.Lista)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Data.ToString("dd/MM/yyyy")</td>
            <td>@item.Valor</td>
            <td>@item.Historico</td>
            <td>@item.Tipo</td>
            <td><button type='button' class='btn btn-warning' onclick="Editar(@item.Id)">  Editar </button></td>
            <td><button type='button' class='btn btn-danger'  onclick="Excluir(@item.Id)"> Excluir </button></td>
        </tr>
    }
</table>
<script>
function Editar(id){
    window.location.href = "../RegistroTransacoes/Cadastro/" + id;
}

function Excluir(id){
    window.location.href = "../RegistroTransacoes/Excluir/" + id;
}
</script>
@model RegistroTransacoesModel
@{
    ViewData["Title"] = "Cadastro de Registro de Transações";
}

<div class="container my-5">
    <div class="card shadow-lg border-success">
        <div class="card-header bg-success text-white">
            <h3 class="m-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-controller="RegistroTransacoes" asp-action="Cadastro" method="post">
                <div class="mb-4">
                    <label for="txtData" class="form-label fw-bold text-success">Data</label>
                    <input type="hidden" id="txtId" class="form-control" asp-for="Id" />
                    <input type="date" id="txtData" class="form-control border-success" asp-for="Data" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="txtValor" class="form-label fw-bold text-success">Valor</label>
                    <input type="number" id="txtValor" class="form-control border-success" asp-for="Valor" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="txtHistorico" class="form-label fw-bold text-success">Histórico</label>
                    <input type="text" id="txtHistorico" class="form-control border-success" asp-for="Historico" />
                    <span asp-validation-for="Historico" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-success">Tipo</label>
                    <div class="form-check">
                        <input class="form-check-input border-success" type="radio" asp-for="Tipo" value="D" id="tipoDespesa" />
                        <label class="form-check-label text-success" for="tipoDespesa">Despesa</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input border-success" type="radio" asp-for="Tipo" value="R" id="tipoReceita" />
                        <label class="form-check-label text-success" for="tipoReceita">Receita</label>
                    </div>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="ddlPlanoConta" class="form-label fw-bold text-success">Plano de Conta</label>
                    <select id="ddlPlanoConta" class="form-control border-success" asp-for="PlanoContaId" asp-items="ViewBag.PlanoContaLista"></select>
                    <span asp-validation-for="PlanoContaId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success btn-lg me-2">Salvar</button>
                    <button type="button" class="btn btn-outline-success btn-lg" onclick="Voltar()">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function Voltar() {
        window.location.href = "/RegistroTransacoes/Index";
    }
</script>

@model RegistroTransacoesModel
@{
    ViewData["Title"] = "Cadastro de Registro de Transações";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="RegistroTransacoes" asp-action="Cadastro" method="post">
    <div class="container">
        <div class="mb-3">
            <label class="form-label">Data</label>
            <input type="hidden" id="txtId" class="form-control" asp-for="Id" />
            <input type="date" id="txtData" class="form-control" asp-for="Data" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Valor</label>
            <input type="number" id="txtValor" class="form-control" asp-for="Valor" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Histórico</label>
            <input type="text" id="txtHistorico" class="form-control" asp-for="Historico" />
            <span asp-validation-for="Historico" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>@Html.RadioButtonFor(m => m.Tipo, "D")Despesa</label>
            <label>@Html.RadioButtonFor(m => m.Tipo, "R")Receita</label>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Plano de Conta</label>
            <select id="ddlPlanoConta" class="form-control" asp-for="PlanoContaId" asp-items="ViewBag.PlanoContaLista"></select>
            <span asp-validation-for="PlanoContaId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">Cancelar</button>
        </div>
    </div>
</form>

<script>
    function Voltar(){
        window.location.href = "/RegistroTransacoes/Index";
    }
</script>